{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "module": "preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noUnusedLocals": false,
    "paths": {
      "#kernel/*": ["./src/kernel/*"],
      "#core/*": ["./src/core/*"],
      "#infra/*": ["./src/infrastructure/*"],
      "#shared/*": ["./src/shared/*"]
    }
  }
}
